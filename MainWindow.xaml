<Window x:Class="Assignment3_ATM_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Window" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBox Name="AccountNumberTextBox" Margin="10"/>
            <Button Content="Select Account" Margin="10" Click="SelectAccountButton_Click"/>
            <TextBlock Name="AccountDetailsTextBlock" Margin="10"/>
            <TextBox Name="AmountTextBox" Margin="10"/>
            <Button Content="Deposit" Margin="10" Click="DepositButton_Click"/>
            <Button Content="Withdraw" Margin="10" Click="WithdrawButton_Click"/>
        </StackPanel>
    </Grid>
</Window>