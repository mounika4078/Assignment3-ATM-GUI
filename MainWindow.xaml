<Window x:Class="Assignment3_ATM_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment3_ATM_GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <StackPanel>
                <Button Name="CreateAccountButton" Content="Create Account" Click="CreateAccountButton_Click" Margin="10"/>
                <Button Name="SelectAccountButton" Content="Select Account" Click="SelectAccountButton_Click" Margin="10"/>
                <Button Name="ExitButton" Content="Exit" Click="ExitButton_Click" Margin="10"/>
            </StackPanel>
        </Grid>
</Window>
